<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://kit.fontawesome.com/8d24a6e83f.js" crossorigin="anonymous"></script>
    <!-- CSS de Bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <section id="section-header">
      <%- include("partials/navbar", {loginBtn: textoBoton, link: ruta, loginBtnB:
      textoBotonB,linkB: rutaB }) %>
    </section>
    <section class="section-content">
      <div class="container">
        <div class="row">
          <div class="col"><h3 id="tituloTabla">Articles</h3></div>

          <div class="col text-end">
            <a id="btn-nuevo" href="/panel/crear" class="btn btn-success">Nuevo</a>
          </div>
        </div>
        <div class="mt-3">
          <table id="articlesTable" class="table table-light table-striped table-hover">
            <thead class="text-center">
              <tr>
                <th scope="col">ID</th>
                <th scope="col">Nombre</th>
                <th scope="col">Email</th>
                <th scope="col">Fecha de registro</th>
                <th scope="col">Rol</th>
                <th scope="col">Acciones</th>
              </tr>
            </thead>
            <tbody class="text-center">
              <% for (const author of authors) { %>
              <tr>
                <td><%= author.id %></td>

                <td><%= author.firstname %> <%= author.lastname%></td>

                <td id="content"><%= author.email %></td>
                <td><%= author.createdAt %></td>

                <td><%= author.role.rol %></td>

                <td>
                  <div class="row">
                    <div class="ms-2 col">
                      <a href="#" class="btn btn-primary"> Modificar </a>
                    </div>
                    <div class="ms-2 col">
                      <form method="POST" action="#?_method=DELETE">
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                      </form>
                    </div>
                  </div>
                </td>

                <% } %>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </section>
    <section id="section-footer"><%- include("partials/footer") %></section>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-qKXV1j0HvMUeCBQ+QVp7JcfGl760yU08IQ+GpUo5hlbpg51QRiuqHAJz8+BrxE/N"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
